{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MIDI Captain MAX Config Editor",
  "version": "0.1.0",
  "identifier": "com.mcmusicworkshop.midicaptain.configeditor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "macOSPrivateApi": false,
    "windows": [
      {
        "title": "MIDI Captain MAX Config Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "entitlements": "Entitlements.plist"
    },
    "category": "DeveloperTool",
    "shortDescription": "Configure MIDI Captain foot controllers",
    "longDescription": "A configuration editor for Paint Audio MIDI Captain foot controllers. Edit button labels, MIDI CC mappings, colors, and more."
  }
}
